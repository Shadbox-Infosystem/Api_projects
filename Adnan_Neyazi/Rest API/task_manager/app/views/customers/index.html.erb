<div id="notice" class="bg-green-100 text-green-700 p-4 mb-4"><%= notice %></div>

<div class="container mx-auto">
  <h1 class="text-3xl font-bold mb-4">Customers</h1>

  <table class="w-full border-collapse border border-gray-200">
    <thead>
      <tr>
        <th class="border border-gray-200 px-4 py-2">Sr.No</th>
        <th class="border border-gray-200 px-4 py-2">Name</th>
        <th class="border border-gray-200 px-4 py-2">Email</th>
        <th class="border border-gray-200 px-4 py-2">Phone</th>
        <th class="border border-gray-200 px-4 py-2">Address</th>
        <th class="border border-gray-200 px-4 py-2">User</th>
        <th class="border border-gray-200 px-4 py-2" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td class="border border-gray-200 px-4 py-2 text-center"><%= customer.id %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.name %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.email %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.phone %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.address %></td>
          <td class="border border-gray-200 px-4 py-2"><%= customer.user_id %></td>
          <td class="border border-gray-200 px-4 py-2"><%= link_to 'Show', customer, class: 'text-blue-500 hover:text-blue-700' %></td>
          <td class="border border-gray-200 px-4 py-2">
              <%= link_to 'Edit', edit_customer_path(customer), class: 'text-green-500 hover:text-green-700' %></td>
          <td class="border border-gray-200 px-4 py-2"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= paginate @customers, class: 'flex justify-center' %>
  </div>

  <div class="mt-4">
    <%= link_to 'New Customer', new_customer_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
