<div class="container mx-auto">
  <p id="notice" class="bg-green-100 text-green-700 p-4 mb-4"><%= notice %></p>

  <p>
    <strong class="font-bold">Name:</strong>
    <%= @category.name %>
  </p>

  <p>
    <strong class="font-bold">Description:</strong>
    <%= @category.description %>
  </p>

  <p>
    <strong class="font-bold">User:</strong>
    <%= @category.user_id %>
  </p>

  <div class="mt-4">
    <%= link_to 'Edit', edit_category_path(@category), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %> |
    <%= link_to 'Back', categories_path, class: 'bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
