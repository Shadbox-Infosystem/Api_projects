<div class="container mx-auto">
  <p id="notice" class="bg-green-100 text-green-700 p-4 mb-4"><%= notice %></p>

  <h1 class="text-3xl font-bold mb-4">Categories</h1>

  <table class="w-full border-collapse border border-gray-200">
    <thead>
      <tr>
        <th class="border border-gray-200 px-4 py-2">Sr.No</th>
        <th class="border border-gray-200 px-4 py-2">Name</th>
        <th class="border border-gray-200 px-4 py-2">Description</th>
        <th class="border border-gray-200 px-4 py-2">User</th>
        <th class="border border-gray-200 px-4 py-2" colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td class="border border-gray-200 px-4 py-2"><%= category.id %></td>
          <td class="border border-gray-200 px-4 py-2"><%= category.name %></td>
          <td class="border border-gray-200 px-4 py-2"><%= category.description %></td>
          <td class="border border-gray-200 px-4 py-2"><%= category.user_id %></td>
          <td class="border border-gray-200 px-4 py-2"><%= link_to 'Show', category, class: 'text-blue-500 hover:text-blue-700' %></td>
          <td class="border border-gray-200 px-4 py-2"><%= link_to 'Edit', edit_category_path(category), class: 'text-green-500 hover:text-green-700' %></td>
          <td class="border border-gray-200 px-4 py-2"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-500 hover:text-red-700' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mt-4">
    <%= paginate @categories, class: 'flex justify-center' %>
  </div>

  <div class="mt-4">
    <%= link_to 'New Category', new_category_path, class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
</div>
