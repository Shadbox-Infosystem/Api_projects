<h1>New Post</h1>

<%= form_with(model: @post, url: posts_path) do |form| %>
  <% Post.column_names.each do |column_name| %>
    <% next if ['id', 'created_at', 'updated_at'].include?(column_name) %>
    <div class="field">
      <%= form.label column_name %>
      <%= form.text_field column_name, value: @post[column_name] %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit "Create Post" %>
  </div>
<% end %>

<%= link_to "Back", posts_path, class: "btn btn-secondary" %>
