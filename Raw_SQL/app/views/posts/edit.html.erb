<h1>Edit Post</h1>
<%= form_with(model: @post, url: post_path(@post['id']), method: :patch) do |form| %>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="actions">
    <%= form.submit "Update Post", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<%= link_to "Back", post_path(@post['id']), class: "btn btn-secondary" %>
